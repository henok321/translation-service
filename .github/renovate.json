{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "docker-compose",
    "github-actions",
    "pre-commit"
  ],
  "pre-commit": {
    "enabled": true
  },
  "prCreation": "immediate",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "at any time"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ]
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "enabled": true
    },
    {
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "allowedVersions": "!/(?:alpha|beta|rc|pre|dev|snapshot)/i",
      "description": "Exclude pre-release versions from pre-commit hook updates"
    }
  ]
}
